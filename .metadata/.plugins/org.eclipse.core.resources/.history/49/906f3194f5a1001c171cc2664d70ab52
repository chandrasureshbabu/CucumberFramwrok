package Pageobjects;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;

public class EnterBugPage {
	
	public WebDriver driver;
	
	
	public EnterBugPage(WebDriver driver)
	{
		this.driver=driver;
	}
	
	By Logout= By.xpath("//*[@id='header']//descendant::ul[1]/li[11]/a");
	
	By Severity=By.id("bug_severity");
	
	By HardWare= By.id("rep_platform");
	
	By OS= By.id("op_sys");
	
	By Summary=By.name("short_desc");
	
	By Description=By.name("comment");
	
	By submit=By.id("maketemplate");
	
	public HomePage logout()
	{
		driver.findElement(Logout).click();
		
		return new HomePage(driver);
	}
	
	public  boolean Logoutlinkdisplayed()
	{
		if(driver.findElement(Logout).isDisplayed())
		{
			return true;
		}
		return false;
	}
	

}
